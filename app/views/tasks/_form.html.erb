<%= form_for @task do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <% if f.object.new_record? %>
    <%= f.submit 'Save' %>
  <% else %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    <%= f.submit 'Save' %>
  <% end %>
<% end %>
